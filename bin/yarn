#!/usr/bin/env bash
set -Eeuo pipefail
DIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
source "$DIR/common.sh"

tool="$(basename "$0")"
if [[ "$tool" == "yarn" || "$tool" == "pnpm" ]]; then
  docker_exec sh -c "npm install -g ${tool} >/dev/null 2>&1 || true; exec ${tool} \"\$@\"" -- "$@"
else
  docker_exec "${tool}" "$@"
fi
