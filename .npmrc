# Safe defaults for npm configuration
# Ignore scripts by default for security
ignore-scripts=true

# Use strict SSL
strict-ssl=true

# Disable audit for faster installs (can be overridden)
audit=false

# Use npm registry
registry=https://registry.npmjs.org/

# Save exact versions
save-exact=true

# Use package-lock.json
package-lock=true

# Disable fund messages
fund=false

# Disable update notifications
update-notifier=false
